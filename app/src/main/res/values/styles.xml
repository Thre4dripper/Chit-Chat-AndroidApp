<?xml version="1.0" encoding="utf-8"?>
<resources>

    //User Details Activity

    <style name="UserDetailsLLStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="UserDetailsLeftIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="UserDetailsLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="UserDetailsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="UserDetailsRightIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">8dp</item>
    </style>

    //Back Button and Label Style

    <style name="BackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">4dp</item>
    </style>

    //Fragment Style

    <style name="ActivityFragmentLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FragmentActionTvStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FragmentTILStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">@color/textColorSecondary</item>
    </style>

    <style name="FragmentEtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="FragmentInstructionTvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    //Chatting Activity

    <style name="SendMessageLayoutActionContainerStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="SendMessageLayoutActionBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">send</item>
        <item name="android:focusable">true</item>
        <item name="tint">@color/fabColor</item>
    </style>

    //Items Chat

    <style name="ItemChatLeftUserIvStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="ItemChatImageCvStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="cardCornerRadius">32dp</item>
    </style>

    <style name="ItemChatIvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>